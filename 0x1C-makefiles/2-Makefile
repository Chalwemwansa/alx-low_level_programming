# Variables
 CC = gcc
 SRC = main.c school.c
 OBJ = $(SRC:.c=.o)
 DEP = $(OBJ:.o=.d)
 NAME = school

 # Compiler flags
 CFLAGS = -Wall -MMD -MP

 # Default target
 all: $(NAME)

 # Rule for building the executable
 $(NAME): $(OBJ)
     $(CC) $(OBJ) -o $(NAME)

# Rule for building object files
%.o: %.c
	    $(CC) $(CFLAGS) -c $< -o $@

# Include generated dependency files
-include $(DEP)
